{{!--
post variation for members
--}}

<div class="w-full bg-container-light">
  <article class="contained p-4 sm:p-8 md:p-16 flex items-center justify-center flex-col sm:block">
    {{#if feature_image}}
      <img
        src="{{feature_image}}"
        alt="{{feature_image_alt}}"
        class="w-full max-w-[300px] float-left md:mr-12 mb-12 rounded-xl object-cover"
      />
    {{/if}}
    <h1 class="post-title font-bold text-4xl mb-4 text-center sm:text-left">{{title}}</h1>
    <div class="post-content readable font-regular text-md text-justify leading-7 mb-10 lin">
      {{{html}}}
    </div>

  </article>
  <!-- member navigation (only for #member posts) -->
  <div class="contained pb-12">
  {{#has tag="#member"}}
    <hr class="mb-10">
    <nav aria-label="Citi atbalstītāji" class="space-y-3">
      <h2 class="text-lg font-semibold">Mūsu draugi</h2>
      {{#get "posts" filter="tag:hash-member+id:-{{id}}" order="published_at desc" limit="8" as |members|}}
        <ul class="flex flex-wrap gap-3">
          {{#foreach members}}
            <li>
              <a href="{{url}}" class="px-4 py-2 rounded-full bg-container-dark/10 hover:bg-container-dark/20 transition">
                {{title}}
              </a>
            </li>
          {{/foreach}}
        </ul>
      {{/get}}
    </nav>
  {{/has}}
  </div>
</div>